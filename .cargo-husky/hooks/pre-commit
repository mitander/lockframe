#!/usr/bin/env sh
set -e

# Disable pre-commit checks if inside a interactive rebase
 if [ -d "$(git rev-parse --git-path rebase-merge)" ] || \
    [ -d "$(git rev-parse --git-path rebase-apply)" ] || \
    [ -f "$(git rev-parse --git-path MERGE_HEAD)" ]; then
    exit 0
fi

echo "Running pre-commit checks..."

# Check formatting
echo "Checking code formatting..."
cargo fmt --all --check || {
    echo "FAILURE: Code is not formatted. Run 'cargo fmt' to fix."
    exit 1
}

# Run clippy
echo "Running clippy..."
cargo clippy --all-targets --all-features -- -D warnings || {
    echo "FAILURE: Clippy found issues. Fix them before committing."
    exit 1
}

# Run fast unit tests
echo "Running unit tests..."
cargo nextest run --workspace || {
    echo "FAILURE: Unit tests failed. Fix them before committing."
    exit 1
}

# Check fuzz targets compile
echo "Running fuzz target checks..."
(cd fuzz && cargo check --all-targets) || {
    echo "FAILURE: Cargo check failed. Fix them before committing."
    exit 1
}

echo "SUCCESS: All pre-commit checks passed!"
